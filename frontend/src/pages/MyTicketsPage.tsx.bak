import { useState, useEffect } from 'react';
import { useNavigate } from 'react-router-dom';
import '../styles/MyTicketsPage.css';

interface Ticket {
  id: string;
  title: string;
  status: string;
  priority: string;
  created_at: string;
  updated_at: string;
}

export default function MyTicketsPage() {
  const navigate = useNavigate();
  const [tickets, setTickets] = useState<Ticket[]>([]);
  const [loading, setLoading] = useState(true);
  const [error, setError] = useState('');
  const [email, setEmail] = useState('');
  const [showEmailForm, setShowEmailForm] = useState(false);
  const [showCodeForm, setShowCodeForm] = useState(false);
  const [searchEmail, setSearchEmail] = useState('');
  const [searchCode, setSearchCode] = useState('');

  const handleChangeEmail = () => {
    if (confirm('Deseja usar outro email? Isso ir√° limpar os dados do email atual.')) {
      localStorage.removeItem('user_token');
      localStorage.removeItem('ticket_email');
      setEmail('');
      setTickets([]);
      setShowEmailForm(true);
      setError('');
    }
  };

  useEffect(() => {
    // Redirecionar usu√°rios internos para a p√°gina correta
    const isInternalUser = !!localStorage.getItem('internal_token');
    if (isInternalUser) {
      navigate('/admin/chamados', { replace: true });
      return;
    }

    const storedEmail = localStorage.getItem('ticket_email');
    const storedToken = localStorage.getItem('user_token');

    if (storedEmail && storedToken) {
      setEmail(storedEmail);
      fetchTickets(storedToken);
    } else {
      setShowEmailForm(true);
      setLoading(false);
    }
  }, [navigate]);

  const handleSearchByEmail = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!searchEmail.trim()) {
      setError('Por favor, informe seu email');
      return;
    }

    try {
      setLoading(true);
      setError('');

      // Obter token para o email
      const accessResponse = await fetch('/api/public-auth/public-access', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          email: searchEmail,
          name: 'Visitante', // Nome gen√©rico para busca
        }),
      });

      if (!accessResponse.ok) {
        throw new Error('Email n√£o encontrado. Voc√™ j√° abriu alguma solicita√ß√£o com este email?');
      }

      const { user_token } = await accessResponse.json();

      // Armazenar e buscar tickets
      localStorage.setItem('user_token', user_token);
      localStorage.setItem('ticket_email', searchEmail);
      setEmail(searchEmail);
      setShowEmailForm(false);
      
      await fetchTickets(user_token);
    } catch (err: any) {
      setError(err.message || 'Erro ao buscar solicita√ß√µes');
      setLoading(false);
    }
  };

  const handleSearchByCode = async (e: React.FormEvent) => {
    e.preventDefault();
    if (!searchCode.trim()) {
      setError('Por favor, informe o c√≥digo da solicita√ß√£o');
      return;
    }

    try {
      setLoading(true);
      setError('');

      // Tentar acessar o ticket diretamente
      const ticketId = searchCode.toLowerCase().trim();
      
      // Buscar informa√ß√µes do ticket
      const response = await fetch(`/api/tickets/${ticketId}/public`);
      
      if (!response.ok) {
        throw new Error('Solicita√ß√£o n√£o encontrada. Verifique o c√≥digo e tente novamente.');
      }

      // Redirecionar para a p√°gina de detalhes
      navigate(`/chamado/${ticketId}`);
    } catch (err: any) {
      setError(err.message || 'Erro ao buscar solicita√ß√£o');
      setLoading(false);
    }
  };


  const fetchTickets = async (token: string) => {
    try {
      setLoading(true);
      const headers: Record<string, string> = {
        'Content-Type': 'application/json',
        'X-User-Token': token,
      };

      const response = await fetch('/api/tickets', { headers });

      if (!response.ok) {
        throw new Error('Erro ao carregar chamados');
      }

      const data = await response.json();
      setTickets(Array.isArray(data) ? data : []);
    } catch (err: any) {
      setError(err.message || 'Erro ao carregar chamados');
    } finally {
      setLoading(false);
    }
  };

  const getStatusColor = (status: string) => {
    switch (status) {
      case 'open':
        return 'status-open';
      case 'in_progress':
        return 'status-progress';
      case 'resolved':
        return 'status-resolved';
      case 'closed':
        return 'status-closed';
      default:
        return 'status-default';
    }
  };

  const getStatusLabel = (status: string) => {
    switch (status) {
      case 'open':
        return 'üì• Recebido';
      case 'in_progress':
        return 'üîç Em An√°lise';
      case 'resolved':
        return '‚öôÔ∏è Resolvendo';
      case 'closed':
        return '‚úÖ Conclu√≠do';
      default:
        return status;
    }
  };

  const getPriorityLabel = (priority: string) => {
    switch (priority) {
      case 'low':
        return 'Baixo';
      case 'medium':
        return 'M√©dio';
      case 'high':
        return 'Alto';
      case 'critical':
        return 'Cr√≠tico';
      default:
        return priority;
    }
  };

  return (
    <div className="my-tickets-page">
      <div className="tickets-container">
        <div className="tickets-header">
          <h1>Minhas Solicita√ß√µes</h1>
          <p>Acompanhe o progresso das suas solicita√ß√µes de apoio</p>
          {email && (
            <div className="user-info-section">
              <p className="user-email">Solicita√ß√µes de: {email}</p>
              <button onClick={handleChangeEmail} className="btn-change-email">
                Usar outro email
              </button>
            </div>
          )}
        </div>

        {error && <div className="alert alert-error">{error}</div>}

        {/* Formul√°rio de busca por email ou c√≥digo */}
        {showEmailForm && !loading && (
          <div className="search-forms">
            <div className="search-intro">
              <h2>Como voc√™ quer encontrar suas solicita√ß√µes?</h2>
              <p>Escolha uma das op√ß√µes abaixo:</p>
            </div>

            <div className="search-options">
              {/* Busca por Email */}
              <div className="search-option">
                <div className="option-icon">üìß</div>
                <h3>Buscar por Email</h3>
                <p>Informe o email usado para abrir as solicita√ß√µes</p>
                <form onSubmit={handleSearchByEmail} className="search-form">
                  <input
                    type="email"
                    placeholder="seu@email.com"
                    value={searchEmail}
                    onChange={(e) => setSearchEmail(e.target.value)}
                    required
                  />
                  <button type="submit" className="btn btn-primary">
                    Buscar Minhas Solicita√ß√µes
                  </button>
                </foImpacto: {getPriorityLabel(ticket.priority)}
                  </span>
                  <span className="date">
                    Aberta em: {new Date(ticket.created_at).toLocaleDateString('pt-BR')}
                  </span>
                </div>
                <div className="ticket-code">
                  C√≥digo: {ticket.id.substring(0, 8).toUpperCase()}ame="search-option">
                <div className="option-icon">üîç</div>
                <h3>Buscar por C√≥digo</h3>
                <p>Digite o c√≥digo da solicita√ß√£o espec√≠fica</p>
                <form onSubmit={handleSearchByCode} className="search-form">
                  <input
                    type="text"
                    placeholder="Ex: A1B2C3D4"
                    value={searchCode}
                    onChange={(e) => setSearchCode(e.target.value.toUpperCase())}
                    required
                  />
                  <button type="submit" className="btn btn-secondary">
                    Buscar Solicita√ß√£o
                  </button>
                </form>
              </div>
            </div>

            <div className="search-help">
              <p>üí° <strong>Ainda n√£o tem uma solicita√ß√£o?</strong></p>
              <a href="/abrir-chamado" className="btn-link">
                Clique aqui para solicitar apoio
              </a>
            </div>
          </div>
        )}

        {loading ? (
          <div className="loading">Buscando suas solicita√ß√µes...</div>
        ) : !showEmailForm && tickets.length === 0 ? (
          <div className="empty-state">
            <div className="empty-icon">üìã</div>
            <p>Voc√™ ainda n√£o tem nenhuma solicita√ß√£o de apoio</p>
            <a href="/abrir-chamado" className="btn btn-primary">
              Solicitar Apoio
            </a>
          </div>
        ) : !showEmailForm && (
          <div className="tickets-list">
            {tickets.map((ticket) => (
              <a
                key={ticket.id}
                href={`/chamado/${ticket.id}`}
                className="ticket-item"
              >
                <div className="ticket-header">
                  <h3>{ticket.title}</h3>
                  <span className={`status-badge ${getStatusColor(ticket.status)}`}>
                    {getStatusLabel(ticket.status)}
                  </span>
                </div>
                <div className="ticket-meta">
                  <span className="priority">
                    Prioridade: {getPriorityLabel(ticket.priority)}
                  </span>
                  <span className="date">
                    Criado em: {new Date(ticket.created_at).toLocaleDateString('pt-BR')}
                  </span>
                </div>
              </a>
            ))}
          </div>
        )}
      </div>
    </div>
  );
}
